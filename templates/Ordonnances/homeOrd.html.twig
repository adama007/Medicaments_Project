{% extends 'base.html.twig' %}


{% block body %}
	<h2 style="margin-top:20px;margin-left:50px">Liste des Ordonnances |
		<small>
			<a href="{{ path('Ajoute_Ordonnances')}}">Ajouter</a>
		</small>
	</h2>
	<br>
	<br>
	{% for msg in app.flashes('notice') %}
		{{ msg }}
	{% endfor %}

	<div class="container d-flex justify-content-center mt-50 mb-50">

		<div class="row">
			<div class="col-md-10">
				{% for med in lesOrdonnances %}
					<div class="card card-body" style="width:600px;margin-top:15px">

						<div class="media align-items-center align-items-lg-start text-center text-lg-left flex-column flex-lg-row">
							<div class="mr-2 mb-3 mb-lg-0">

								<img src="https://cdn.pixabay.com/photo/2019/10/13/08/20/prescription-4545598_960_720.jpg" width="150" height="150" alt="ordonnances">

							</div>

							<div class="media-body" style="margin-top:15px">
								<h5 class="media-title font-weight-semibold">
									<p href="#" data-abc="true">Ordonnance de Mr
										{{med.nomPatient}}</p>

								</h5>

								<p class="mb-3">cette ordonnance crée a
									{{med.createdAt | date('d-m-y') }}</p>
								<h4 class="mb-0 font-weight-semibold" style="margin-left:20px">{{med.totalPrice}}
									DT</h4>

							</div>

							<div class="mt-3 mt-lg-0 ml-lg-3 text-center">

								<br>
								<a style="margin-bottom:10px" class="btn btn-success" href="{{ path('edit_user', {'id':med.id }) }}" onclick="return confirm('Are you sure to Edit!{{ med.nomPatient}}')">Modifier</a>
								<br>
								<a class="btn btn-danger" href="{{ path('cand_delete', {'id':med.id }) }}" onclick="return confirm('Are you sure to delete ordonnace de Mr.{{ med.nomPatient}}')">supprimé</a>

							</div>
						</div>
					</div>


				{% else %}

					<tr>
						<td colspan="5">Aucun ordonné</td>
					</tr>

				{% endfor %}
			</section>
		{% endblock %}
