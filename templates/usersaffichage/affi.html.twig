{% block body %}

	<title>
		{% block title %}Welcome!
		{% endblock %}

	</title>
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
	<nav class="navbar bg-info">
		<div class="container-fluid">
			<a class="navbar-brand" style='color:white'>Liste des Ordonnances</a>
			<div class="d-flex">
				<a href="{{ path('affiOrd')}}" class="btn btn-warning" style='margin-right:5px'>les ordonnances</a>
				<a href="{{ path('affi')}}" class="btn btn-warning">les médicaments</a>
			</div>
		</div>
	</nav>
	<a style="margin-left:1580px;font-size:1.4em;color:red" href="{{path('security_logout')}}">sign out</a>
	<h2 style="margin-left:50px">Liste des Medicaments |

	</h2>

	<br>

	{% for msg in app.flashes('notice') %}
		{{ msg }}
	{% endfor %}
	<section style="background-color: #eee;">


		<div class="container py-5">

			<div class="row">
				{% for med in lesMedicaments %}
					<div style="margin-top:15px	" class="col-md-12 col-lg-4 mb-4 mb-lg-0">
						<div class="card" style="border-radius: 30px;">

							<div class="d-flex justify-content-between p-3">


								<p class="lead mb-0">{{med.nomMed}}</p>
							</div>
							<img src="{{med.image.url}}" style="height:250px" class="card-img-top" alt="Gaming Laptop"/>
							<div class="card-body">


								<div class="d-flex justify-content-between mb-3">
									<h5 class="mb-0">{{med.categorie}}</h5>
									<h5 class="text-dark mb-0">DT{{med.price}}</h5>
								</div>

								<div class="d-flex justify-content-between mb-2">
									<div class="ms-auto text-warning">
										<i class="fa fa-star"></i>
										<i class="fas fa-star"></i>
										<i class="fas fa-star"></i>
										<i class="fas fa-star"></i>
										<i class="fas fa-star-half-alt"></i>
									</div>
								</div>
							</div>
						</div>
					</div>
				{% else %}

					<tr>
						<td colspan="5">Aucun abonné</td>
					</tr>

				{% endfor %}
			</div>
		</div>
	</section>
{% endblock %}
